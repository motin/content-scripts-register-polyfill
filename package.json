{
	"name": "content-scripts-register-polyfill",
	"version": "1.0.1",
	"description": "Chrome extension polyfill for Firefox's browser.contentScripts.register()",
	"keywords": [
		"browser",
		"content scripts",
		"contentScripts",
		"css",
		"declarative",
		"declarativecontent",
		"extension",
		"scripts",
		"web-ext",
		"webext"
	],
	"repository": "fregante/content-scripts-register-polyfill",
	"license": "MIT",
	"author": "Federico Brigante <opensource@bfred.it> (bfred.it)",
	"main": "build/main/index.js",
	"typings": "build/main/index.d.ts",
	"module": "build/module/index.js",
	"files": [
		"build/**/*.js"
	],
	"scripts": {
		"build": "run-s clean && run-p build:*",
		"build:main": "tsc -p tsconfig.json",
		"build:module": "tsc -p tsconfig.module.json",
		"prepare": "run-s build",
		"clean": "trash build",
		"test": "xo && tsc --noEmit",
		"watch": "tsc --watch"
	},
	"xo": {
		"envs": [
			"browser"
		],
		"globals": [
			"chrome"
		],
		"rules": {
			"@typescript-eslint/prefer-readonly-parameter-types": "off"
		}
	},
	"dependencies": {
		"@types/firefox-webext-browser": "^70.0.1",
		"webext-patterns": "^0.9.0"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^0.7.0",
		"@types/chrome": "0.0.107",
		"npm-run-all": "^4.1.5",
		"trash-cli": "^1.4.0",
		"typescript": "^3.8.3",
		"xo": "^0.30.0"
	}
}
